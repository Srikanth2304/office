package com.sample.practice.Service;

import org.springframework.stereotype.Service;

@Service
public class HelloService {

    public String getmessage() {
        return "Hello!!";
    }

    public String givename(String name) {
        return "Hi " + name;
    }
}




package com.sample.practice.controller;

import com.sample.practice.Service.HelloService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

@RestController
public class HelloController {

    @Autowired
    HelloService helloService;

    @GetMapping("/Hello")
    public String sayHello() {
        return helloService.getmessage(); // use instance
    }

    @PostMapping("/Name")
    public String Name(@RequestBody String name) {
        return helloService.givename(name); // use instance
    }
}
