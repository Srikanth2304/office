package com.sc.wrb.model;

import com.sc.wrb.model.pk.DraftFormPK;
import jakarta.persistence.*;

import java.time.LocalDateTime;

@Entity
@Table(name = "form_draft_data")
public class DraftForm {

    @EmbeddedId
    private DraftFormPK draftFormPK;

    @Lob
    @Column(name = "form_json")
    private String formJson;

    @Column(name = "created_at")
    private LocalDateTime createdAt = LocalDateTime.now();

    public DraftForm() {}

    public DraftForm(DraftFormPK draftFormPK, String formJson) {
        this.draftFormPK = draftFormPK;
        this.formJson = formJson;
    }

    public DraftFormPK getDraftFormPK() {
        return draftFormPK;
    }

    public void setDraftFormPK(DraftFormPK draftFormPK) {
        this.draftFormPK = draftFormPK;
    }

    public String getFormJson() {
        return formJson;
    }

    public void setFormJson(String formJson) {
        this.formJson = formJson;
    }

    public LocalDateTime getCreatedAt() {
        return createdAt;
    }

    public void setCreatedAt(LocalDateTime createdAt) {
        this.createdAt = createdAt;
    }
}
